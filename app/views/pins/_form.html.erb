<%= form_for @pin do |f| %>

  <% if @pin.errors.any? %>
    <h2>We have some errors here!</h2>
    <ul>
      <% @pin.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>

  <%= f.label :description, "Description" %>
  <%= f.text_area :description %>

  <%= f.label :image, "Photo" %>
  <%= f.file_field :image %>

  <%= f.submit %>

<% end %>
